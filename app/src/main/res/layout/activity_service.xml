<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceActivity">

    <TextView
        android:id="@+id/textViewNewCase"
        android:layout_width="225dp"
        android:layout_height="64dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="56dp"
        android:textAlignment="center"
        android:textColor="#1B1B1B"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetNewCases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.473" />

    <Button
        android:id="@+id/buttonGetNewCases"
        android:layout_width="215dp"
        android:layout_height="53dp"
        android:onClick="runService"
        android:text="Get New Cases"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.876" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="373dp"
        android:layout_height="62dp"
        android:layout_marginTop="24dp"
        android:text="NEW COVID CASES TODAY"
        android:textColor="#252424"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/buttonGetNewCases"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.007" />
</androidx.constraintlayout.widget.ConstraintLayout>